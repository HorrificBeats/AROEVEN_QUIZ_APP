{% extends 'base.html.twig' %}

{% block title %} Wawawewa!
	{# TBDted #}
{% endblock %}

{% block body %}
	<div
		class='container col-lg-10'>
		{# DYNAMIC TITLE #}
		<h1 class='text-bold text-white'>
			<i>{{module[id-1].title}}</i>
		</h1>

		{# Each MODULE has different colors  #}
		{% if id is odd %}
			<div id='SlidesContainer' class='rounded animated fadeIn bg-light'>
				{# MODULE A #}
				{% for slide in slides %}
					<div id='slide{{slide.id}}' class='slide p-4' {{ slide.id == 1 ? 'style="display:"' : 'style="display:none"' }}>
						<h3 style='text-align:center' class='mb-3'>
							[
								{{slide.getSlideNumber}}
							]
						</h3>
						<div class='col-12' style='min-height: 400px;'>	
							{{slide.content|raw}} {# Ca sa nu adauge ghilimele degeaba #}
						</div>
						<br>
						<div class='text-center'>
							{# Fac sa DISPARA BTN daca SLIDE Id este ULTIMUL (cifra manuala) #}
							<button 
								onclick='showSlide("slide{{slide.id+1}}")' 
								class='mt-3 btn btn-dark {% if slide.id == 5 %} d-none {% endif %}
								'>NEXT SLIDE
							</button>
						
						{# {{dump(slide.id)}} #}

						{# Fac sa APARA BTN DACA SLIDE ID este ULTIMUL (cifra imputata manual) #}
						{% if slide.id == 5 %}
							<a id='moduleB' href="{{ path('module', {'id' : 2}) }}">
								<button class='btn btn-danger'>
									Go To MODULE B
								</button>
							</a>
						{% endif %}
						</div>
						<br>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<div style='background-color: #fff5eb;' class='rounded'>
				{# MODULE B #}
				{% for slide in slides %}
					<div id='slide{{slide.id}}' class='slideN{{slide.getSlideNumber}} slide p-4' 
					{{ slide.id == 6 ? 'style="display:"' : 'style="display:none"' }}>
						<h3 style='text-align:center' class='mb-3'>
							[
							{{slide.getSlideNumber}}
							]
						</h3>
						<div class='col-12' style='min-height: 400px;'>
							{{slide.content|raw}}
							{# Ca sa nu adauge ghilimele degeaba #}
						</div>
						<br>
						<div id='nextButton' class='text-center' style='display:'>
							<button 
							onclick='showSlide("slide{{slide.id+1}}")' 
							class='text-center mt-3 btn btn-secondary {% if slide.id == 10 %} d-none {% endif %}
							'>
								NEXT SLIDE
							</button>
						{# Fac sa APARA BTN DACA SLIDE ID este ULTIMUL (cifra imputata manual) #}
						{% if slide.id == 10 %}
							{# IF I'm on the 2nd Module, I'll go to the POST-QUIZ #}
							<a id='quizPost' style='display: ' href="{{ path('quizPOST_', {'quiz_id' : 1, "question_id" : 1})}}">
								<button class='btn btn-danger'>
									Go To Quiz-POST
								</button>
							</a>
						{% endif %}	
						</div>
						{# {{dump(slide.id)}} #}
						<br>
					</div>
				{% endfor %}
			</div>
		{% endif %}


		{# NAVIGATION TO 2nd MODULE & 2nd QUIZ #}
		{# TBDeleted  #}
		<div class='d-none'>
		{% if module[id-1] == module[0] %}

			{# IF I'm already on the 1st Module, I'll go to the next one #}
			<a id='moduleB' href="{{ path('module', {'id' : 2}) }}">
				<button class='btn btn-danger'>
					Go To MODULE B
				</button>
			</a>
		{% elseif module[id-1] == module[1] %}
			{# IF I'm on the 2nd Module, I'll go to the POST-QUIZ #}
			<a id='quizPost' style='display: ' href="{{ path('quizPOST_', {'quiz_id' : 1, "question_id" : 1})}}">
				<button class='btn btn-danger'>
					Go To Quiz-POST
				</button>
			</a>
		{% endif %}
		</div>

	</div>

	
{% endblock %}
