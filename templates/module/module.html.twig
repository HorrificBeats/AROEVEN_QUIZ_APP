{% extends 'base.html.twig' %}

{% block title %}Hello ModuleController!
{% endblock %}

{% block body %}

	{# DYNAMIC TITLE #}
	<h1>
		<i>{{module[id-1].title}}</i>
	</h1>

	<h2>SLIDES SUCKA</h2>

	{# Each MODULE has different colors  #}
	{% if id is even %}
		<div style='background-color: #fff5eb'>
			{% for slide in slides %}
				<h3>{{slide.getSlideNumber}}</h3>
				{{slide.content|raw}} {# Ca sa nu adauge ghilimele degeaba #}
				<br>
				<button>
					NEXT SLIDE</button>
				<br>
			{% endfor %}
		</div>
	{% else %}
		<div style='background-color: #ff7373'>
			{% for slide in slides %}
				<h3 style='text-align:center'>[ {{slide.getSlideNumber}} ]</h3>
				{{slide.content|raw}} {# Ca sa nu adauge ghilimele degeaba #}
				<br>
				<button>
					NEXT SLIDE</button>
				<br>
			{% endfor %}
		</div>
	{% endif %}


	{# NAVIGATION TO 2nd MODULE & 2nd QUIZ #}
	{% if module[id-1] == module[0] %}
		{# IF I'm already on the 1st Module, I'll go to the next one #}
		<a href="{{ path('module', {'id' : 2}) }}">
			<button>
				Go To MODULE B
			</button>
		</a>
	{% elseif module[id-1] == module[1] %}
		{# IF I'm on the 2nd Module, I'll go to the POST-QUIZ #}
		<a href="{{ path('quiz', {'id' : 2}) }}">
			<button>
				Go To Quiz-POST
			</button>
		</a>
	{% endif %}


{% endblock %}
