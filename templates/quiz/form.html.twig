{% extends 'base.html.twig' %}
{% block title %}
	Hello !
{% endblock %}

{% block body %}
	{{ dump() }}


	<h1>Quiz
		{{quiz_id}}</h1>
	<div style='background-color:#cee5ff; padding:20px' class='container rounded col-lg-10'>
		<div style='background-color:#f0f8ff' class='rounded p-1'>
			<h2>
				{{questions.qnumber}}.
				{{questions.content}}
			</h2>
		</div>
		{{ form_start (quizForm) }}
		{{ form_widget (quizForm.question) }}
		{# HIDDEN #}
		{{ form_widget (quizForm.quiz) }}
		{# HIDDEN #}
		{{ form_widget (quizForm.answer, {'attr': {'class': 'quizAnswers p-3'}}) }}
		<div class='text-center'>
			{{ form_widget (quizForm.save, {'attr': {'class': 'btn btn-danger mb-0'}}) }}
		</div>
		{{ form_end (quizForm) }}
	</div>


{% endblock %}
