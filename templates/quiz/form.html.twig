{% extends 'base.html.twig' %}
{% block title %} Quiz Time! {% endblock %}
{% block body %}
	<div class='container'>
		<div class="progress mb-4" >
			<div id='progressBar' class="bg-secondary progress-bar progress-bar-striped progress-bar animate__animated animate__slideInLeft " role="progressbar" aria-valuenow="1" aria-valuemin="0" aria-valuemax="100"></div>
		</div>
		<h1 class='mb-4 text-white'>Quiz</h1>

		<div  class='animatedGradient container rounded col-lg-10 p-3 animate__animated animate__fadeIn'>
			<div id="quizAnswer" class='rounded p-1'>
				<h2>{{questions.qnumber}}.{{questions.content}}</h2>
			</div>

			{{ form_start (quizForm) }}
			{{ form_widget (quizForm.question) }}		{# HIDDEN #}
			{{ form_widget (quizForm.quiz) }}			{# HIDDEN #}
			{{ form_widget (quizForm.answer, {'attr': {
				'class': 'quizAnswers p-3 option-input radio',
				'onclick':"RadioValidator();"
			}}) }}

			<div id='submitBtnContainer' class='text-center' onclick="movingButton()">
				<button id='movingButton' type="submit" class="btn btn-dark mb-0">
					<div>
						NEXT QUESTION
					</div>
				</button>
			</div>
			{{ form_end (quizForm) }}
		</div>
	</div>

	{# ProgressBar Animation #}
	<style>
		{# For 5 Quiz-Questions #}
		{% if question_id == 1 %}
			#progressBar {
				width: 1%;
			}
		{% elseif question_id == 2 %}
			#progressBar {
				width: 20%;
			}
		{% elseif question_id == 3 %}
			#progressBar {
				width: 40%;
			}
		{% elseif question_id == 4 %}
			#progressBar {
				width: 60%;
			}
		{% elseif question_id == 5 %}
			#progressBar {
				width: 80%;
			}
		{% endif %}
	</style>
{% endblock %}
