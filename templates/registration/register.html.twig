			</div>

			{# SIGN UP Shows Only for non-loggedIn users #}
			{% if not app.user %}
				<div style='float:right; background-color: #CADBD9; padding:15px;' class='rounded col-lg-6'>
					<h2>SIGN UP HERE</h2>

					{% form_theme registrationForm 'bootstrap_4_horizontal_layout.html.twig' %}

					{{ form_start(registrationForm) }}
					{% block form_label_errors %}{% endblock %}

					{{ form_row(registrationForm.username) }}
					{{ form_row(registrationForm.plainPassword) }}
					{{ form_row(registrationForm.birthdate) }}
					{{ form_row(registrationForm.agreeTerms) }}

					<div class='text-center'>
						<button type="submit" class="btn btn-primary">Register</button>
					</div>
					{{ form_end(registrationForm) }}

				</div>
			{% endif %}
		</div>
		<div
			class='text-center animate__animated animate__swing'>
			{# 1/2 Din protectie; cealalta jumatate este in CONTROLLER #}
			{% if app.user %}
				<a href='{{ path('tutorial') }}'>
					<button class='btn btn-dark mt-3'>GO TO TUTORIAL</button>
				</a>
			{% endif %}
		</div>
	</div>
