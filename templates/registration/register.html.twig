	{% endfor %}
	<div>
		<div class='container mt-4 mb-4'>
			<div style=' background-color: #f0f8ff; {# padding:15px #};' class='hoverable p-3 rounded {% if not app.user %} col-lg-5 {% else %} col-lg-12 {% endif %}'>
				<h1 class='animate__animated animate__bounce text-bold'> WELCOME! </h1>
				{# <h1 class="ml1">
					<span class="text-wrapper">
						<span class="line line1"></span>
						<span class="letters"> WELCOME! </span>
						<span class="line line2"></span>
					</span>
				</h1> #}
